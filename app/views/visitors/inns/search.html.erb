<div class="container w-50">
  <% if @query.nil? %>
    <h2 class="text-center m-4">Resultado da busca avanÃ§ada:</h2>
  <% else %>
    <h2 class="text-center m-4">Pousadas encontradas com: <%= @query %></h2>
  <% end %>

  <% if @inns.present? %>
    <p class="fw-bold"><%= @inns.count %> <%= Inn.model_name.human(count: @inns.count).downcase %> <%= t(:found_a, count: @inns.count) %>.</p>
    <ul class="list-group">
      <% @inns.each do |inn| %>
        <li class="list-group-item">
          <%= link_to inn.brand_name, show_inn_path(inn), class: "text-decoration-none text-dark" %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="mt-3">Nenhum registro encontrado.</p>
  <% end %>

  <%= link_to 'Voltar', root_path, class: "btn btn-secondary mt-3" %>
</div>