<div class="container mt-4">
  <h1 class="mb-2">Meus quartos</h1>
  <%= link_to 'Cadastrar novo quarto', new_inn_room_path(current_user.inn), class: "btn btn-primary mb-4" %>

  <h2>Lista de Quartos</h2>

  <% if @rooms.any? %>
    <table class="table">
      <thead>
      <tr>
        <th>Nome</th>
        <th>Descrição</th>
        <th>Dimensão</th>
        <th>Preço padrão</th>
        <th>Status</th>
        <th>Ação</th>
      </tr>
      </thead>
      <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td><%= room.name %></td>
          <td><%= room.description %></td>
          <td><%= room.dimension %>m2</td>
          <td><%= number_to_currency(room.standard_price, unit: "R$") %></td>
          <td><%= room.active ? 'Ativo' : 'Inativo' %></td>
          <td>
            <%= link_to 'Detalhes', room_path(room), class: "btn btn-info btn-sm" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="mt-3">Não há quartos cadastrados para esta pousada.</p>
  <% end %>
</div>
