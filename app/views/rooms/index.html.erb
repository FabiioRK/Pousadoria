<h1>Meus quartos</h1>

<%= link_to 'Cadastrar novo quarto', new_inn_room_path(current_user.inn) %>

<h1>Lista de Quartos</h1>

<table>
  <thead>
  <tr>
    <th>Nome</th>
    <th>Descrição</th>
    <th>Dimensão</th>
    <th>Preço padrão</th>
    <th>Status</th>
  </tr>
  </thead>
  <tbody>
  <% @rooms.each do |room| %>
    <tr>
      <td><%= room.name %></td>
      <td><%= room.description %></td>
      <td><%= room.dimension %></td>
      <td><%= number_to_currency(room.standard_price, :unit => "R$") %></td>
      <td><%= room.active ? 'Ativo' : 'Inativo' %></td>
      <td>
        <%= link_to 'Detalhes', room_path(room) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>