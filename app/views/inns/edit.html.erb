<h1>Editar Pousada</h1>

<%= form_for @inn do |f| %>

  <%= f.label "Pousada ativa" %>
  <%= f.check_box :active %>

  <div class="field">
    <%= f.label :corporate_name %>
    <%= f.text_field :corporate_name %>
  </div>

  <div class="field">
    <%= f.label :brand_name %>
    <%= f.text_field :brand_name %>
  </div>

  <%= f.fields_for :address do |address_fields| %>
    <div class="field">
      <%= address_fields.label :street, 'Rua'%>
      <%= address_fields.text_field :street %>
    </div>
    <div class="field">
      <%= address_fields.label :district, 'Bairro' %>
      <%= address_fields.text_field :district %>
    </div>
    <div class="field">
      <%= address_fields.label :city, 'Cidade' %>
      <%= address_fields.text_field :city %>
    </div>
    <div class="field">
      <%= address_fields.label :state, 'Estado' %>
      <%= address_fields.text_field :state %>
    </div>
    <div class="field">
      <%= address_fields.label :postal_code, 'CEP' %>
      <%= address_fields.text_field :postal_code %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :pet_allowed %>
    <%= f.check_box :pet_allowed %>
  </div>

  <div class="field">
    <%= f.label :payment_methods, 'MÃ©todos de pagamento' %>
    <%= f.collection_check_boxes :payment_methods, PaymentMethod.methods, :first, :last %>
  </div>

  <div class="field">
    <%= f.label :checkin_time %>
    <%= f.time_select :checkin_time %>
  </div>

  <div class="field">
    <%= f.label :checkout_time %>
    <%= f.time_select :checkout_time %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :usage_policies %>
    <%= f.text_area :usage_policies %>
  </div>

  <div class="actions">
    <%= f.submit 'Atualizar pousada' %>
  </div>

<% end %>

<%= link_to 'Voltar', @inn %>
