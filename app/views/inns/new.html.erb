        <%#= check_box_tag 'inn[payment_methods][]', method, @inn.payment_methods.include?(method.to_s) %>
        <%#= method.humanize %>
<!--      </label><br>-->
    <%# end %>
<!--  </div>-->


  <div class="field">
    <%= f.label :checkin_time %>
    <%= f.time_select :checkin_time %>
  </div>
  <div class="field">
    <%= f.label :checkout_time %>
    <%= f.time_select :checkout_time %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :usage_policies %>
    <%= f.text_area :usage_policies %>
  </div>
  <div class="actions">
    <%= f.submit 'Cadastrar pousada' %>
  </div>
<% end %>