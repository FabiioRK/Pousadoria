<!-- app/views/inns/show.html.erb -->

<h1>Dados da Pousada</h1>

<p><strong>Razão Social:</strong> <%= @inn.corporate_name %></p>
<p><strong>Nome da Marca:</strong> <%= @inn.brand_name %></p>
<p><strong>Número de Registro:</strong> <%= @inn.registration_number %></p>
<p><strong>Número de Telefone:</strong> <%= @inn.phone_number %></p>
<p><strong>E-mail de Contato:</strong> <%= @inn.contact_email %></p>

<% if @inn.address %>
  <h2>Endereço</h2>
  <p><strong>Rua:</strong> <%= @inn.address.street %></p>
  <p><strong>Bairro:</strong> <%= @inn.address.district %></p>
  <p><strong>Cidade:</strong> <%= @inn.address.city %></p>
  <p><strong>Estado:</strong> <%= @inn.address.state %></p>
  <p><strong>CEP:</strong> <%= @inn.address.postal_code %></p>
<% else %>
  <p><strong>Endereço não especificado</strong></p>
<% end %>

<p><strong>Pets Permitidos:</strong> <%= @inn.pet_allowed ? 'Sim' : 'Não' %></p>
<p><strong>Horário de Check-in:</strong> <%= @inn.checkin_time.strftime('%H:%M') %></p>
<p><strong>Horário de Check-out:</strong> <%= @inn.checkout_time.strftime('%H:%M') %></p>
<p><strong>Descrição:</strong> <%= @inn.description %></p>
<p><strong>Políticas de Uso:</strong> <%= @inn.usage_policies %></p>

<%= link_to 'Voltar', inns_path %>
