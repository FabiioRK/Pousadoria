<h1>Criar período de preços</h1>

<% if @custom_price.errors.any? %>
  <p>Verifique os erros abaixo:</p>
  <ul>
    <% @custom_price.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for [@room, @custom_price] do |f| %>
  <div class="field">
    <%= f.label :start_date %>
    <%= f.date_field :start_date %>
  </div>

  <div class="field">
    <%= f.label :end_date %>
    <%= f.date_field :end_date %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>

  <div class="actions">
    <%= f.submit 'Salvar' %>
  </div>
<% end %>

<%= link_to 'Voltar', room_path(@room) %>